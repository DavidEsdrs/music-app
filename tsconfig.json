{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "target": "ES2020",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "rootDir": "./src",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "esModuleInterop": true,
     "typeRoots": [
        "./src/@types/",
        "./node_modules/@types"
     ],
     "sourceRoot": "./src/@types/",
     "noImplicitAny": true,
     "noImplicitThis": true,
     "resolveJsonModule": true
  }
}